<h2><%= current_user.name %></h2>

<div class="user">
	<%= link_to "Edit my profile", edit_user_registration_path %>
	<table class="details">
		<tbody>
			<tr>
				<th>Email:</th>
				<td><%= current_user.email %></td>
			</tr>
			<tr>
				<th>Monthly Income:</th>
				<td><%= current_user.total_income %></td>
			</tr>
			<tr>
				<th>Monthly Costs:</th>
				<td><%= current_user.total_expenses %></td>
			</tr>
			<tr>
				<th>Monthly Net:</th>
				<td><%= current_user.monthly_net %></td>
			</tr>
		</tbody>
	</table>
</div>
